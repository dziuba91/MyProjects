<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15015015" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/title1" />

    <Button
        android:id="@+id/button_previous"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="&lt; poprzedni  " />

    <Button
        android:id="@+id/button_next"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_previous"
        android:layout_alignBottom="@+id/button_previous"
        android:layout_alignParentRight="true"
        android:text="  następny >" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_kanji"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/text_positionNumber"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/text_kanji" >

        <TextView
            android:id="@+id/text_basicData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Medium Text2"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </ScrollView>

    <TextView
        android:id="@+id/text_positionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_kanji"
        android:layout_below="@+id/imageView1"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_kanji"
        android:layout_width="125dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_positionNumber"
        android:layout_gravity="center"
        android:layout_margin="0.0dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="0.0dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:text="行"
        android:textSize="100dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_kanji"
        android:layout_below="@+id/text_kanji"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:text="Złożenia Kanji:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_previous"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/text_submissions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        	android:textSize="16dp"
            android:text="Medium Text" />

    </ScrollView>

</RelativeLayout>
